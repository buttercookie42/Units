<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:id="@+id/result" android:layout_width="fill_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:gravity="center_vertical" android:paddingLeft="6dip"
			android:minHeight="?android:attr/listPreferredItemHeight"
			android:layout_height="wrap_content" />
			
		<TextView android:id="@+id/reciprocal_notice"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="@string/reciprocal_conversion" 
			android:visibility="gone"
			/>
	
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="48sp">
			
		<MultiAutoCompleteTextView android:id="@+id/have"
			style="@style/MainEntry"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:completionThreshold="2" 
			android:layout_weight="2"
			android:hint="@string/have_hint"
			android:imeOptions="actionNext"
			android:nextFocusDown="@+id/want"
			 />
		<MultiAutoCompleteTextView android:id="@+id/want"
			style="@style/MainEntry"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:completionThreshold="1" 
			android:hint="@string/want_hint" 
			android:layout_weight="2"
			android:imeOptions="actionGo"
			android:nextFocusUp="@+id/have"
			 />
			 
             <com.android.calculator2.ColorButton
                android:id="@+id/backspace"
                android:background="@drawable/backspace"
                style="@style/button_style"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="3"
                />
		</LinearLayout>

		<org.jared.commons.ui.WorkspaceView
		android:id="@+id/numpad_switcher"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
