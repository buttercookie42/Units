<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
				
		<MultiAutoCompleteTextView android:id="@+id/have"
			android:completionThreshold="2" 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:hint="@string/have_hint"
			android:inputType="text"
			android:imeOptions="actionNext"
			android:background="@drawable/input_top"
			android:layout_margin="0dip"
			
			 />

		<MultiAutoCompleteTextView android:id="@+id/want"
			android:layout_height="wrap_content"
			android:completionThreshold="1" 
			android:hint="@string/want_hint" android:layout_width="fill_parent"
			android:inputType="text"
			android:imeOptions="actionGo"
			android:background="@drawable/input_bottom"
			android:layout_margin="0dip"
			 />
		</LinearLayout>

		<Button android:id="@+id/swap_inputs"
			
			android:background="@drawable/swap"
			android:scaleType="fitCenter"
			android:layout_width="60dip"
			android:layout_height="fill_parent"
			
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			 
			 />
	</LinearLayout> 
</merge>